{
  "name": "website-arcade-final-1",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "clean": "rm -rf .next out",
    "build": "next build",
    "build:static": "next build && cp -r public/admin out/admin",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export && cp -r public/admin out/admin",
    "setup": "powershell -ExecutionPolicy Bypass -File setup-cms.ps1",
    "setup:bash": "bash setup-cms.sh",
    "cms:config": "echo 'CMS Configuration' && cat public/admin/config.yml",
    "cms:test": "echo 'Testing CMS endpoints...' && curl -f http://localhost:3000/admin/ || echo 'CMS not running'",
    "build:analyze": "ANALYZE=true npm run build",
    "deploy:manual": "npm run build && netlify deploy --prod --dir=out",
    "deploy:preview": "npm run build && netlify deploy --dir=out",
    "deploy:github": "powershell -ExecutionPolicy Bypass -File setup-github-repo.ps1",
    "deploy:netlify": "powershell -ExecutionPolicy Bypass -File deploy-script.ps1",
    "postinstall": "echo 'Installation complete! Run npm run setup to configure CMS.'",
    "test:build": "npm run clean && npm run build",
    "validate": "npm run lint && npm run test:build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/chart.js": "^2.9.41",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@netlify/plugin-nextjs": "^5.11.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
